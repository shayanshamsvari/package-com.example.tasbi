<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mihrab"> <!-- اینجا همون بک‌گراندی که طراحی کردی -->

        <!-- اسلات‌ها (۵ تا ImageView) -->
        <LinearLayout
            android:id="@+id/slotsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivSlot1"
                android:layout_width="242dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_1"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivSlot2"
                android:layout_width="242dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_2"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivSlot3"
                android:layout_width="242dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_3"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivSlot4"
                android:layout_width="242dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_4"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>