<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/tapsell_nativead_cta_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4.0dip">

    <ImageView
        android:id="@id/tapsell_nativead_logo"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_marginEnd="4.0dip"
        android:contentDescription="Logo" />

    <LinearLayout
        android:id="@id/rvHeader"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@id/tapsell_nativead_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/mrt"
            android:gravity="right"
            android:maxLines="1"
            android:text="عنوان تبلیغ"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tapsell_nativead_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3.0dip"
            android:ellipsize="end"
            android:fontFamily="@font/mrt"
            android:gravity="right"
            android:maxLines="2"
            android:text="توضیحات کامل و طولانی تبلیغی که باید بریده نشود"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />
    </LinearLayout>

    <Button
        android:id="@id/tapsell_nativead_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4.0dip"
        android:layout_marginEnd="2.0dip"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/mrt"
        android:minEms="4"
        android:paddingStart="8.0dip"
        android:paddingEnd="8.0dip"
        android:text="نصب رایگان"
        android:textColor="#ffffffff" />
</LinearLayout>
